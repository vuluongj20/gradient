{
	"compilerOptions": {
		"baseUrl": "./",
		"jsx": "react-jsx",
		"target": "es6",
		"moduleResolution": "node",
		"paths": {
			"@utils": ["./src/utils"],
			"@utils/*": ["./src/utils/*"],
			"@components": ["./src/components"],
			"@components/*": ["./src/components/*"],
			"@data": ["./src/data"],
			"@data/*": ["./src/data/*"]
		}
	},
	"paths": {
		"*": ["global.d.ts"]
	},
	"exclude": ["node_modules", "public"]
}

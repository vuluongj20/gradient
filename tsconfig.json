{
	"compilerOptions": {
		"baseUrl": "./",
		"jsx": "react-jsx",
		"target": "es6",
		"moduleResolution": "node",
		"paths": {
			"@utils": ["./src/utils"],
			"@utils/*": ["./src/utils/*"],
			"@components": ["./src/components"],
			"@components/*": ["./src/components/*"],
			"@pageComponents": ["./src/pageComponents"],
			"@pageComponents/*": ["./src/pageComponents/*"],
			"@icons": ["./src/icons"],
			"@icons/*": ["./src/icons/*"],
			"@data": ["./src/data"],
			"@data/*": ["./src/data/*"],
			"@types": ["./src/types"],
			"@types/*": ["./src/types/*"],
			"@theme": ["./src/layouts/theme"],
			"@theme/*": ["./src/layouts/theme/*"]
		}
	},
	"exclude": ["node_modules", "public"]
}
